<UserControl x:Class="Cliente.ClientMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliente"
             mc:Ignorable="d" 
             d:DesignWidth="600">
    <StackPanel Margin="0 10 0 0" HorizontalAlignment="Right">

        <Border
            CornerRadius="10"
            Background="#3185FC"
            Width="400"
            Margin="10 0 10 0"
            >
            <TextBlock
                x:Name="textBlock_mensagem"
                TextWrapping="Wrap"
                Padding="10 5 10 5 "
                Margin="10 0 10 0"
                Text="..."/>
        </Border>
        <TextBlock
            x:Name="textBlock_timestamp"
            FontSize="10"
            HorizontalAlignment="Right"
            Margin="0 0 10 0"
            Text="00/00/0000 00:00:00"
        />
    </StackPanel>
</UserControl>
